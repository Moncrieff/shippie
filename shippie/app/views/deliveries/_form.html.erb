<%= simple_form_for @delivery do |f| %>
  <%= f.error_messages %>
  <%= f.input :category, :collection => Delivery::CATEGORIES %>
  <%= f.input :name %>
  <%= f.input :from_city, :label => 'From City' %>
  <%= f.input :from_address, :label => 'From Address' %>
  <%= f.input :to_city, :label => 'To City' %>
  <%= f.input :to_address, :label => 'To Address' %>
  <%= f.input :date, :as => :date, :label => 'Deliver by:' %>
  <%= f.input :weight %>
  <%= f.input :length %>
  <%= f.input :height %>
  <%= f.input :wideness %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>
