<% #if current_user.try(:role) == "customer" %>
<% if can? :create, Delivery %>
  <%= link_to "New delivery", new_delivery_path, :class => 'btn-success' %>
<% end %>

<h2>Deliveries</h2>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Category</th>
      <th>Delivery</th>
      <th>From</th>
      <th>To</th>
      <th>Date due</th>
      <th>Bids</th>
    </tr>
  </thead>
  <tbody>
    <tr><% @deliveries.each do |delivery| %></tr>
        <td><%= delivery.category %></td>
        <td><%= link_to delivery.name, delivery %></td>
        <td><span class='city'><%= delivery.from_city %></span>, <%= delivery.from_address %></td>
        <td><span class='city'><%= delivery.to_city %></span>, <%= delivery.to_address %></td>
        <td><%= delivery.date %></td>
        <td><%= link_to delivery.bids.count, delivery %></td></br>
      <% end %>
    </tbody>
</table>
