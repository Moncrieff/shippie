<% if can? :update, @delivery %>
  <%= link_to "Edit Delivery", edit_delivery_path(@delivery), :class => 'btn-warning' %>
<% end %>

<% if can? :destroy, @delivery %>
  <%= link_to "Delete Delivery", @delivery, :method => :delete,
    :confirm => "Are you sure you want to delete this delivery?", :class => 'btn-danger' %>
<% end %>

<% if (can? :create_bid_for_delivery, @delivery) && (can? :bid_on_deliveries, @delivery) %>
  <%= link_to "New Bid", new_delivery_bid_path(@delivery), :class => 'btn-success' %>
<% end %>
