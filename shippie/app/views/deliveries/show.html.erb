<h2><%= @delivery.name %></h2>
<% if @delivery.expired? %>
  <span class="label label-important">Expired</span>
<% end %>

<% if can? :update, @delivery %>
  <%= link_to "Edit Delivery", edit_delivery_path(@delivery) %>
<% end %>

<% if can? :destroy, @delivery %>
  <%= link_to "Delete Delivery", @delivery, :method => :delete,
  :confirm => "Are you sure you want to delete this delivery?" %>
<% end %>

<% if can? :create_bid_for_delivery, @delivery %>
  <%= link_to "New Bid", new_delivery_bid_path(@delivery) %>
<% end %>
<p>
From city: <%= @delivery.from_city %></br>
From address: <%= @delivery.from_address %></br>
To city: <%= @delivery.to_city %></br>
To address: <%= @delivery.to_address %></br>
Date due: <%= @delivery.date %></br>
</p>
<p>Bids<br>
<ul id='bids'>
  <% @delivery.bids.each do |bid| %>
    <li>
    <%= bid.price %><small> by <%= link_to "#{bid.user.email}", user_path(bid.user) %></small> 
    <% if bid.accepted == true %>
      Bid taken
    <% end %>
    <% if can? :accept_bids, @delivery %>
      <% if @delivery.accepted == nil %>
        <%= link_to 'Accept', accept_bid_path(@delivery, bid), :method => :put %>
      <% end %>
    <% end %>
    </li>
  <% end %>
</ul>
</p>
